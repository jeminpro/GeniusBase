<div class="row">
    <div class="col-md-9">
        <div class="form-group">
            <input type="text" class="form-control rounded-0" id="articleTitle" placeholder="Enter title here">
        </div>
        <textarea name="content" id="editor">
            &lt;p&gt;Here goes the initial content of the editor.&lt;/p&gt;
        </textarea>
    </div>
    <div class="col-md-3">
        <div class="card rounded-0 mb-2">
            <div class="card-header">
                Publish
            </div>
            <div class="card-body">
                <div class="btn btn-outline-dark btn-sm">Save Draft</div>
                <div class="btn btn-outline-dark btn-sm pull-right">Preview</div>
            </div>
            <div class="card-footer">
                <div class="btn btn-link btn-sm text-danger">Move to trash</div>
                <div class="btn btn-primary btn-sm pull-right">Publish</div>
            </div>
        </div>

        <div class="card rounded-0 mb-2">
            <div class="card-header">
                Category
            </div>
            <div class="card-body">
                <div class="btn btn-link btn-sm text-primary">+ Add New Category</div>


                <select class="form-control" id="exampleFormControlSelect1">
                    <option value="1">Uncategorized</option>
                    <option value="2">C#</option>
                    <option value="3">Java Script</option>
                </select>


            </div>
        </div>

        <div class="card rounded-0 mb-2">
            <div class="card-header">
                Tags
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 p-0">
                        <input type="text" class="form-control rounded-0" placeholder="Enter tag">
                    </div>
                    <div class="col-md-3">
                        <div class="btn btn-outline-dark btn-sm p-1">Add</div>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
</div>

<script>
    ClassicEditor.create(document.querySelector('#editor'));
</script>