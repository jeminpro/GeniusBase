<div class="category" ng-controller="categoryController as categoryCtrl" ng-init="init()">
    <div class="select-category" ng-if="!isAddCategory">
        <form>
            <div class="form-group">
                <label for="formSelectCategory">Select category</label>
                <select class="form-control" id="formSelectCategory" ng-model="selectedCategory" ng-options="categorie.categoryName for categorie in categories"></select>

            </div>
            <button type="button" class="btn btn-link btn-sm text-primary" ng-click="addCategory()">+ Add New Category</button>
        </form>
    </div>
    <div class="add-category" ng-if="isAddCategory">
        <form>
            <div class="form-group">
                <label for="formAddCategory">Group Name</label>
                <input type="text" class="form-control" id="formAddCategory" placeholder="Group name here">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" ng-click="cancelAddCategory()">Cancel</button>
        </form>
    </div>
</div>

<script src="~/js/Module/Partial/category.js"></script>